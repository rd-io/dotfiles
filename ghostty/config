# Appearance
background = 000000
foreground = A0A0A0

theme = "Adwaita Dark"
window-theme = ghostty


shell-integration = bash
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true

shell-integration-features = no-cursor
mouse-hide-while-typing = true
cursor-style = block_hollow
background-opacity = 0.80
scrollback-limit = 2000

# Window settings
window-inherit-font-size = false
window-padding-color = extend
window-decoration = false
window-padding-x = 10
window-padding-y = 10

# Font settings
font-family = HackNerdFontMono
font-feature = -liga
font-feature = -calt
font-feature = -dlig
font-size = 12


# Keybindings

# Other
keybind = ctrl+alt+p=toggle_window_decorations
keybind = ctrl+alt+o=close_surface

# Split Creation
keybind = ctrl+alt+h=new_split:left
keybind = ctrl+alt+j=new_split:down
keybind = ctrl+alt+k=new_split:up
keybind = ctrl+alt+l=new_split:right

# Split Navigation
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

# Split Resizing
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+l=resize_split:right,10

# Tabs
keybind = ctrl+shift+n=next_tab
keybind = ctrl+shift+p=last_tab
