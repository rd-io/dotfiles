# Appearance
background = 000000
foreground = cccccc

theme = "Adwaita Dark"
window-theme = ghostty


shell-integration = bash
clipboard-trim-trailing-spaces = true
clipboard-paste-protection = true

shell-integration-features = no-cursor
mouse-hide-while-typing = true
cursor-style = block_hollow
background-opacity = 0.80
scrollback-limit = 2000

# Window settings
window-inherit-font-size = false
window-padding-color = extend
window-decoration = false
window-padding-x = 10
window-padding-y = 10

# Font settings
font-family = HackNerdFontMono
font-feature = -liga
font-feature = -calt
font-feature = -dlig
font-size = 12

# Keybindings
keybind = ctrl+alt+p=toggle_window_decorations
keybind = ctrl+alt+q=close_surface

# Keybinding Split Creation
keybind = alt+ctrl+h=new_split:left
keybind = alt+ctrl+j=new_split:down
keybind = alt+ctrl+k=new_split:up
keybind = alt+ctrl+l=new_split:right

# Keybindings Split Navigation
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right
